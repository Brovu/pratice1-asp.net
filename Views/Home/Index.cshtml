@model List<Practice1.Model.ListFriend>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Họ Tên</th>
                <th scope="col">Giới tính</th>
                <th scope="col">Chuyên ngành</th>
                <th scope="col">Tuổi</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var list in Model)
            {
                <tr>
                    <td>@list.name</td>
                    <td>@list.sex</td>
                    <td>@list.major</td>
                    <td>@string.Format("{0}", list.age)</td>
                </tr>
            }
        </tbody>
    </table>

    <button class="mt-3">
        <a href="~/Home/AddFriend">Thêm mới bạn bè</a>
    </button>
    <button class="mt-3">
        <a href="~/Home/AddFriends">Thêm mới bạn bè 2</a>
    </button>
</main>