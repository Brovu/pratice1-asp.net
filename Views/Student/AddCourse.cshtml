
@model Practice1.Models.Course

@{
    ViewBag.Title = "Thêm học phần";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container">
    <h4>Thêm học phần</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Mã học phần</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.courseID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.courseID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tên học phần</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.courseName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.courseName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Số tín chỉ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.courseCredits, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.courseCredits, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giảng viên</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.courseTeacher, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.courseTeacher, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-danger">
                <a style="text-decoration: none; color: white" href="javascript:window.history.back()">Hủy</a>
            </button>
            <input type="submit" value="Tạo học phần" class="btn btn-outline-info" />
        </div>
    </div>
</div>
}

