@model Practice1.Models.Student

@{
    ViewBag.Title = "AddStudent";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>


@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post, new {enctype = "multipart/form-data"}))

{
    @Html.AntiForgeryToken()

<main class="container">
    <div class="form-horizontal">
        <h2>Thêm mới sinh viên</h2>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mt-2">
            <label class="control-label col-md-2">Mã số sinh viên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mt-2">
            <label class="control-label col-md-2">Họ và tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group mt-2">
            <label class="control-label col-md-2">Ngày tháng năm sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Birth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Birth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Khoa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Major, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Major, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group mt-2">
            <label class="control-label col-md-2">Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Giới tính</label>
            <div class="col-md-10">
                <label><input type="radio" name="Sex" value="Nam" checked> Nam</label>
                <label><input type="radio" name="Sex" value="Nữ"> Nữ</label>
                <label><input type="radio" name="Sex" value="Khác"> Khác</label>
                @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" />
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default btn-success" />
            </div>
        </div>


    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</main>

}

