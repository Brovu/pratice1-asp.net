@model Practice1.Models.Student

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sửa thông tin sinh viên";
    Practice1.Models.ManageStudentEntities3 db = new Practice1.Models.ManageStudentEntities3();

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <main class="container">
        <div class="form-horizontal">
            <h4>Sửa thông tin sinh viên</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="control-label col-md-2">Họ và tên</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ngày tháng năm sinh</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Birth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.Birth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Khoa</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Major, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Major, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số điện thoại</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Giới tính</label>
                <div class="col-md-10">
                    <label><input type="radio" name="Sex" value="Nam" checked> Nam</label>
                    <label><input type="radio" name="Sex" value="Nữ"> Nữ</label>
                    <label><input type="radio" name="Sex" value="Khác"> Khác</label>
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-2">
                <label class="control-label col-md-2">Học lực</label>
                <div class="col-md-10 d-flex flex-column mt-2">
                    <select class="form-control" name="idTypeStudent">
                        @foreach (var type in db.TypeStudents.ToList())
                        {
                            <option value="@type.ID selected">@type.typeName</option>
                        }
                    </select>
                </div>
            </div>

            @* <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" />
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>*@

            <div class="form-group mt-2">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-danger">
                        <a style="text-decoration: none; color: white" href="~/Student/ListStudent">Hủy</a>
                    </button>
                    <input type="submit" value="Cập nhật" class="btn btn-info" />
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </main>
}